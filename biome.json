{
  "$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "files": {
    "includes": [
      "packages/**/*",
      "apps/**/*",
      "!**/dist/*",
      "!**/coverage/*",
      "!**/*.d.ts",
      "!**/*.astro"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": { "noUnusedImports": "error" }
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space"
    }
  },
  "javascript": {
    "formatter": {
      "indentStyle": "space",
      "quoteStyle": "single"
    }
  },
  "css": {
    "formatter": {
      "indentStyle": "space",
      "quoteStyle": "single"
    }
  }
}
